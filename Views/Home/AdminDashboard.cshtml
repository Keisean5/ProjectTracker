@{
    User user = ViewBag.User;
}
<nav class="navbar navbar-expand-lg navbar-light bg-light">
    <h4 class="navbar-brand">Hello, @user.FirstName @user.LastName!</h4>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
    
    <div class="collapse navbar-collapse justify-content-end" id="navbarSupportedContent">
        <ul class="navbar-nav ml-auto">
            <li class="nav-item">
                <a class="nav-link"asp-action="UserProfileUpdate" asp-route-id="@user.UserId">Edit Profile</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" asp-action="Logout" asp-controller="Users">Log Out</a>
            </li>
        </ul>
    </div>
</nav>


    <h1 class="text-center mt-3">Admin DashBoard</h1>



<div class="d-flex justify-content-around">
    <div class="card mt-3" style="width: 18rem;">
        <div class="card-header">
            <h2>
                Projects: @ViewBag.AllProjects.Count
            </h2>
        </div>
        <div class="card-body">
            <p class="card-text">Projects are created by only Admins. Admins are then assigned to Created Project. Once Projects are Created, Admins may then start creating the Tickets for the Project where they will Assign Team Members to Created Tickets.</p>
        </div>
        <ul class="list-group list-group-flush">
            <li class="list-group-item">Projects Incomplete = @ViewBag.IncompleteProjects.Count</li>
            <li class="list-group-item">Projects Complete = @ViewBag.CompleteProjects.Count</li>
        </ul>
        <div class="card-body">
            <a asp-action="ProjectsAll" asp-controller="Project" class="card-link">View Projects</a>
        </div>
    </div>
    
    <div class="card mt-3" style="width: 18rem;">
        <div class="card-header">
            <h2>Users: @ViewBag.AllUsers.Count</h2>
        </div>
        <div class="card-body">
            <p class="card-text">Once Team Memebers Register, Only an Admin may change their Status to "Admin". Team Members will be assigned Tickets by Admins.</p>
        </div>
        <ul class="list-group list-group-flush">
            <li class="list-group-item">Admins = @ViewBag.AllAdmins.Count</li>
            <li class="list-group-item">Users = @ViewBag.Users.Count</li>
        </ul>
        <div class="card-body">
            <a asp-action="UserAll" asp-controller="Home" class="card-link">View Users</a>
        </div>
    </div>
</div>