@model Ticket

<nav class="navbar navbar-expand-lg navbar-light bg-light">
    <h4 class="navbar-brand">Hello, @ViewBag.User.FirstName @ViewBag.User.LastName!</h4>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
    
    <div class="collapse navbar-collapse justify-content-end" id="navbarSupportedContent">
        <ul class="navbar-nav ml-auto">
            <li class="nav-item">
                <a class="nav-link" asp-action="MyProfile" asp-controller="Home">Home</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" asp-action="UserAll" asp-controller="Home" class="card-link">Users</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" asp-action="ProjectsAll" asp-controller="Project" class="card-link">Projects</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" asp-action="UserProfileUpdate" asp-route-id="@ViewBag.User.UserId" asp-controller="Home">Edit Profile</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" asp-action="Logout" asp-controller="Users">Log Out</a>
            </li>
        </ul>
    </div>
</nav>

<h1 class="text-center mt-3">Edit @ViewBag.TicketToEdit.TicketTitle</h1>

<form asp-action="UpdateTicket" method="post">
    <div class="form-group">
        <label asp-for="TicketTitle"></label>
        <input asp-for="TicketTitle"  class="form-control">
        <span asp-validation-for="TicketTitle" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="TicketDescription"></label>
        <textarea asp-for="TicketDescription"  class="form-control" rows="3"></textarea>
        <span asp-validation-for="TicketDescription" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="TicketPriority"></label>
        <select asp-for="TicketPriority"  class="form-control">
            <option value="Low">Low</option>
            <option value="Medium">Meduim</option>
            <option value="High">High</option>
        </select>
        <span asp-validation-for="TicketPriority" class="text-danger"></span>
    </div>
    <div>
        <button class="btn btn-primary">Update</button>
        <a asp-action="TicketPage" asp-controller="Ticket"><button class="btn btn-danger">Cancel</button></a>
    </div>
</form>