@model Project

<a asp-action="MyProfile" asp-controller="Home">Home</a>
|
<a asp-action="Logout" asp-controller="Users">Log Out</a>

<h1>Edit @ViewBag.ProjectToEdit.ProjectTitle</h1>

<form asp-action="UpdateProject" method="post">
    <div class="form-group">
        <label asp-for="ProjectTitle"></label>
        <input asp-for="ProjectTitle"  class="form-control">
        <span asp-validation-for="ProjectTitle" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="ProjectDescription"></label>
        <input asp-for="ProjectDescription"  class="form-control">
        <span asp-validation-for="ProjectDescription" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="AdminAssigned"></label>
            <select asp-for="AdminAssigned" class="form-control">
            @foreach(var admin in ViewBag.AdminNames){
                @if(admin.Admin == "Admin"){
                <option value="@admin.FirstName">@admin.FirstName</option>
                }
            }
        </select>
        <span asp-validation-for="AdminAssigned" class="text-danger"></span>
    </div>
    
<button>Update</button>
</form>