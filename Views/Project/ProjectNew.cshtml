@model Project
@{
    User user = ViewBag.User;
}

<nav class="navbar navbar-expand-lg navbar-light bg-light">
    <h4 class="navbar-brand">Hello, @user.FirstName @user.LastName!</h4>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
    
    <div class="collapse navbar-collapse justify-content-end" id="navbarSupportedContent">
        <ul class="navbar-nav ml-auto">
            <li class="nav-item">
                <a class="nav-link" asp-action="MyProfile" asp-controller="Home">Home</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" asp-action="UserAll" asp-controller="Home" class="card-link">Users</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" asp-action="ProjectsAll" asp-controller="Project" class="card-link">Projects</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" asp-action="UserProfileUpdate" asp-route-id="@user.UserId" asp-controller="Home">Edit Profile</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" asp-action="Logout" asp-controller="Users">Log Out</a>
            </li>
        </ul>
    </div>
</nav>

<h1 class="text-center mt-3">Create a New Project</h1>
<br>
<br>
<form asp-action="CreateProject" method="post">
    <div class="form-group">
        <label asp-for="ProjectTitle"></label>
        <input asp-for="ProjectTitle"  class="form-control">
        <span asp-validation-for="ProjectTitle" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="ProjectDescription"></label>
        <textarea asp-for="ProjectDescription"  class="form-control" rows="3"></textarea>
        <span asp-validation-for="ProjectDescription" class="text-danger"></span>
    </div>
    <div>
        <button class="btn btn-primary">Create</button>
        <a asp-action="ProjectsAll"><button type="button" class="btn btn-danger">Cancel</button></a>
    </div>
</form>
<br>