@model Project

<form asp-action="AssignAdmin" method="post">
    <div class="form-row align-items-center">
        <div class="col-auto my-1">
            <label asp-for="AdminAssigned" class="mr-sm-2" for="inlineFormCustomSelect"></label>
            <select asp-for="AdminAssigned" class="custom-select mr-sm-2" id="inlineFormCustomSelect">
                <option value="">--Select Admin--</option>
                @foreach(var admin in ViewBag.AllUsers)
                {
                    @if(admin.Admin == "Admin")
                    {
                        <option value="@admin.FirstName">@admin.FirstName</option>
                    }
                }
            </select>
            <span asp-validation-for="AdminAssigned" class="text-danger"></span>
        </div>
    </div>
    <div class="col-auto my-1">
        <button type="button" class="btn btn-info">Assign</button>
    </div>
</form>